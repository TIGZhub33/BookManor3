<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE9F4"
    tools:context=".Settings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:navigationIcon="?attr/actionModeCloseDrawable"
        app:title="@string/settings"
        app:titleMarginStart="80dp"
        app:titleTextColor="@color/black"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="673dp"
        android:layout_marginTop="72dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar4">

        <androidx.cardview.widget.CardView
            android:id="@+id/manageAccountCardView"
            android:layout_width="322dp"
            android:layout_height="68dp"
            android:layout_marginStart="50dp"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="309dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/ic_profile" />

                <TextView
                    android:id="@+id/manageAccountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="46dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/alata"
                    android:text="@string/manage_account"
                    android:textColor="@color/black"
                    android:textSize="23sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/inviteFriednsCardView"
            android:layout_width="322dp"
            android:layout_height="68dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="170dp"
            android:clickable="true">>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_menu_share" />

                <TextView
                    android:id="@+id/inviteFriendsTextView"
                    android:layout_width="202dp"
                    android:layout_height="44dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="31dp"
                    android:layout_marginBottom="7dp"
                    android:fontFamily="@font/alata"
                    android:text="@string/invite_friends"
                    android:textColor="@color/black"
                    android:textSize="23sp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/notificationsCardView"
            android:layout_width="322dp"
            android:layout_height="68dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="260dp"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="67dp"
                    android:layout_height="58dp"
                    app:srcCompat="@android:drawable/ic_popup_reminder" />

                <TextView
                    android:id="@+id/notifcationsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="103dp"
                    android:layout_marginBottom="18dp"
                    android:fontFamily="@font/alata"
                    android:text="@string/notification"
                    android:textColor="@color/black"
                    android:textSize="23sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/helpandSupportCardView"
            android:layout_width="322dp"
            android:layout_height="68dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="350dp"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="71dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_menu_help" />

                <TextView
                    android:id="@+id/helpTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="54dp"
                    android:layout_marginBottom="22dp"
                    android:fontFamily="@font/alata"
                    android:text="@string/help_and_support"
                    android:textColor="@color/black"
                    android:textSize="23sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/appInfoCardView"
            android:layout_width="322dp"
            android:layout_height="68dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="440dp"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="71dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_menu_info_details" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="138dp"
                    android:layout_marginBottom="21dp"
                    android:fontFamily="@font/alata"
                    android:text="@string/app_info"
                    android:textColor="@color/black"
                    android:textSize="23sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/signOutCardView"
            android:layout_width="322dp"
            android:layout_height="68dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="530dp"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="69dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_exit" />

                <TextView
                    android:id="@+id/signOutTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="138dp"
                    android:layout_marginBottom="13dp"
                    android:fontFamily="@font/alata"
                    android:text="@string/sign_out"
                    android:textColor="@color/black"
                    android:textSize="23sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>